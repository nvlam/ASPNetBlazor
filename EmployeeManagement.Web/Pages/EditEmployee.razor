@page "/editemployee/{id}"
@inherits EditEmployeeBase
<EditForm Model="@EditEmployeeModel" OnValidSubmit="HandleValidSubmit" >
    <DataAnnotationsValidator />
    <h3>EditEmployee</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label"> First Name </label>
    </div>
    <div class="col-sm-10">
        <InputText id="firstName" class="form-control" placeholder="First Name"
                   @bind-Value="EditEmployeeModel.FirstName" />
        <ValidationMessage For="@(()=>EditEmployeeModel.FirstName)" />
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label"> Last Name </label>
    </div>
    <div class="col-sm-10">
        <InputText id="lasttName" class="form-control" placeholder="Last Name"
                   @bind-Value="EditEmployeeModel.LastName" />
        <ValidationMessage For="@(()=>EditEmployeeModel.LastName)" />
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label"> Date Of Birth </label>
    </div>
    <div class="col-sm-10">
        <InputDate id="dateOfBirth" @bind-Value="EditEmployeeModel.DateOfBirth" />
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label"> Email </label>
    </div>
    <div class="col-sm-10">
        <InputText id="email" class="form-control" placeholder="Email"
                   @bind-Value="EditEmployeeModel.Email" />
        <ValidationMessage For="@(()=>EditEmployeeModel.Email)" />
    </div>
    <div class="form-group row">
        <label for="emailConfirm" class="col-sm-2 col-form-label"> Email Confirm </label>
    </div>
    <div class="col-sm-10">
        <InputText id="emailConfirm" class="form-control" placeholder="Email Confirm"
                   @bind-Value="EditEmployeeModel.EmailConfirm" />
        <ValidationMessage For="@(()=>EditEmployeeModel.EmailConfirm)" />
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label"> Department: </label>
    </div>
    <div class="col-sm-10">
        @if (Departments == null)
        {
            <div class="spinner"></div>
        }
        else
        {
            <InputSelect id="department" @bind-Value="EditEmployeeModel.DepartmentId">
                @foreach (var dept in Departments)
                    {
                    <option value="@dept.DepartmentId"> @dept.DepartmentName</option>
                    }

            </InputSelect>
        }
    </div>
    <button class="btn btn-primary" type="submit"> Save </button>
</EditForm>

